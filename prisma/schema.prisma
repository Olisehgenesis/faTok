generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id           String   @id
  createdAt    DateTime @default(now())
  title        String? 
  isLive       Boolean  @default(false)
  sessions     Session[]
  messages     Message[]
}

model Session {
  id        String   @id @default(cuid())
  roomId    String
  role      String   // "creator" | "viewer"
  userAgent String?
  createdAt DateTime @default(now())
  endedAt   DateTime?
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model Message {
  id        String   @id @default(cuid())
  roomId    String
  sender    String
  text      String
  createdAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
}


